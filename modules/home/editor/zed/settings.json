{
  "auto_install_extensions": {
    "catppuccin": true,
    "catppuccin-icons": true,
    "git-firefly": true,
    "nix": true,
    "dockerfile": true,
    "docker-compose": true,
    "log": true
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "scrollbar": {
    "show": "never"
  },
  "minimap": {
    "show": "always"
  },
  "inlay_hints": {
    "enabled": true
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "theme": {
    "mode": "system",
    "dark": "Catppuccin Mocha",
    "light": "Catppuccin Latte"
  },
  "icon_theme": {
    "mode": "system",
    "dark": "Catppuccin Mocha",
    "light": "Catppuccin Latte"
  }
}
